<LinearLayout android:layout_width="match_parent"
    android:layout_height="260dp"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/txt_chart_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="10dp"
        android:background="@drawable/dr_bottom_line"
        android:drawableEnd="@drawable/ic_arrow_drop_down_black"
        android:drawablePadding="5dp"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="end"
        android:padding="10dp"
        android:text="Line Chart"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="@color/black" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart_dashboard_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barchart_dashboard_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:visibility="gone" />

    <com.github.mikephil.charting.charts.RadarChart
        android:id="@+id/radarchart_dashboard_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:visibility="gone" />

    <com.github.mikephil.charting.charts.ScatterChart
        android:id="@+id/scatterchart_dashboard_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:visibility="gone" />
</LinearLayout>